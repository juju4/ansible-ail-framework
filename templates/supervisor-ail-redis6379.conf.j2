## /etc/supervisor/conf.d/ail-redis6379.conf
{{ ansible_managed | comment }}
[program:ail-redis6379]
command=/usr/bin/redis-server {{ ail_root }}/configs/6379.conf
directory={{ ail_root }}
user={{ ail_user }}
stdout_logfile=/var/log/supervisor/ail-redis6379.log
redirect_stderr=true
autostart=true
autorestart=true
startsecs=10
environment=AIL_HOME="{{ ail_root }}",AIL_BIN="{{ ail_root }}/bin",AIL_FLASK="{{ ail_root }}/var/www",AIL_REDIS="{{ ail_root }}/redis/src",AIL_LEVELDB="{{ ail_root }}/redis-leveldb",PATH="$AIL_LEVELDB:$AIL_REDIS:$AIL_HOME:$PATH",AILENV="{{ ail_root }}"
stopsignal=KILL
killasgroup=true
