## /etc/supervisor/conf.d/ail-redis-leveldb3016.conf
# {{ ansible_managed }}
[program:ail-redis-leveldb3016]
command=redis-leveldb -H '{{ ail_redislvdbhost }}' -D '{{ ail_redislvdbdir }}/3016/' -P 3016 -M '{{ ail_redislvdb_nb_db }}'
directory={{ ail_root }}
user={{ ail_user }}
stdout_logfile=/var/log/supervisor/ail-redis-leveldb3016.log
redirect_stderr=true
autostart=true
autorestart=true
startsecs=10
environment=AIL_HOME="{{ ail_root }}",AIL_BIN="{{ ail_root }}/bin",AIL_FLASK="{{ ail_root }}/var/www",AIL_REDIS="{{ ail_root }}/redis/src",AIL_LEVELDB="{{ ail_root }}/redis-leveldb",PATH="$AIL_LEVELDB:$AIL_REDIS:$AIL_HOME:$PATH",AILENV="{{ ail_root}}"

